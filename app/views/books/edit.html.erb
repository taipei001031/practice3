<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<h3>Editing Book</h3>
<%= form_for(@book, url: update_book_path(@book.id)) do |f| %>
<p>Title</p>
 <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit 'Update Book' %></p>
  <%=link_to "Show",book_path%>
  <%=link_to "Back","/books"%>
<% end %>