<h2>Books</h2>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
<!-- 一覧表示 -->
<table rules="none">
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
        <tr>
            <td><%= book.title %></td>
            <td><%= book.body %></td>
            <td><%= link_to "Show",book_path(book.id)%></td>
            <td><%= link_to "Edit",edit_book_path(book.id)%></td>
            <td><%= link_to "Destroy",destroy_book_path(book.id),method: :delete, "data-confirm" => "Are you sure?"%>
            </td>
        </tr>
    <% end %>
   </tbody>
</table>
<!-- 新規投稿 -->
<%= form_for(@book, url: '/books') do |f|%>
 <% if @book.errors %>
  <ul>
  	<p>error</p>
   <% @book.errors.full_messages.each do |message| %>

    <li><%= message %></li>
   <% end %>
  </ul>
<% end %>
<h3>New book</h3>
<p>Title</p>
<%= f.text_field :title%>
<p>Body</p>
<%= f.text_area :body%>
<p><%= f.submit 'Create Book' %></p>
<% end %>


